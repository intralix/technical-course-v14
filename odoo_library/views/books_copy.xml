<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data>

    <record id="bookscopy_view_form" model="ir.ui.view">
        <field name="name">library.copybook.form</field>
        <field name="model">library.copybook</field>
        <field name="arch" type="xml">        
        <form string="">
            <sheet>
               <group>              
                <field name="book_id" />
               </group>               
            </sheet>
        </form>    
        </field>
    </record>

   <record model="ir.ui.view" id="book_view_search">
       <field name="name">library.copybook.search</field>
       <field name="model">library.copybook</field>
       <field name="arch" type="xml">    
               <search>
                   <field name="copy_book_identifier"/>
               </search>    
       </field>
   </record>

   <record model="ir.ui.view" id="book_view_list">
       <field name="name">library.copybook.list</field>
       <field name="model">library.copybook</field>
       <field name="arch" type="xml">    
          <tree string="Books List">
           <field name="book_id" />
          </tree>
       </field>
   </record>
</data>


</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data >    
        <record id="library_list_action" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
            <p class = "o_view_nocontent_smiling_face">Create the first book</p>
            </field>
        </record>    

<record id="renting_list_action" model="ir.actions.act_window">
    <field name="name">Rentings</field>
    <field name="res_model">library.renting</field>
     <field name="view_mode">tree,form,map</field>
     <field name="help" type="html">
            <p class = "o_view_nocontent_smiling_face">Create the first renting of book</p>
    </field>
</record>

<menuitem id="menu_library" name="Book Library" sequence="1"/>
<menuitem id="menu_library_sub" name="Book Library" parent="menu_library" sequence ="2"/> 
<menuitem  id="menu_library_books" name="Books" parent = "menu_library_sub" sequence="3" action="library_list_action"/>

<menuitem  id="menu_library_renting" name="Rentings" parent = "menu_library_sub" sequence="4" action="renting_list_action"/>
</data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    <record id="library_book_wizard_form_view" model="ir.ui.view">
        <field name="name">library.book.wizard.form</field>
        <field name="model">library.book.wizard</field>
        <field name="arch" type="xml">
        <form string = 'View Book'>
            <group>
            <field name="book_id"/>            
            </group>
        </form>
        </field>
    </record>

    <act_window id="launch_book_wizard" 
                name="View Book" 
                binding_model="library.book" 
                res_model="library.book.wizard"
                view_mode="form"
                target="new"/>            
    </data>
    
    

</odoo>

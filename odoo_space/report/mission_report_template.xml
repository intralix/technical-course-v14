<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report 
    id='report_mission' 
    model='space.mission' 
    string="Reporte de misión" 
    name="odoo_space.report_mission_document"
    file="odoo_space.report_mission"
    report_type="qweb-html"/>

    <template id="report_mission_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name" class="mt16"/>
                        <div class="row mt32 mb32" id="mission_info">
                            <div class="col-auto mw-100 mb-2">
                                <strong> Duración de misión: </strong>
                                <t t-if="doc.start_date">
                                    <span t-field="doc.start_date"/>
                                </t>
                                to
                                <t t-if="doc.end_date">
                                    <span t-field="doc.end_date"/>
                                </t>
                            </div>
                            <div t-if="doc.space_id" class="col-auto mw-100 mb-2">
                                <strong>Nave espacial:</strong>
                                <span t-field="doc.space_id.name"/>
                            </div>
                        </div>
                        <h4>Tripulantes</h4>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_name">Nombre</th>
                                    <th name="th_phone">Teléfono</th>
                                    <th name="th_email">Correo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.tripulation_ids" t-as="crewmember">
                                    <tr>
                                        <td t-if="crewmember.name" name="td_name">
                                            <span t-field="crewmember.name"/>
                                        </td>
                                        <td t-if="crewmember.phone" name="td_phone">
                                            <span t-field="crewmember.phone"/>
                                        </td>
                                        <td t-if="crewmember.email" name="td_email">
                                            <span t-field="crewmember.email"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

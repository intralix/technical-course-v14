<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mission_view_form">
            <field name="name">space.mission.form</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet>
                        <h1>
                            <field name="ship"/>
                        </h1>
                        <group>
                            <group>
                                <field name="space_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tripulantes">
                                <field name="tripulation_ids"/>
                            </page>
                            <page string="DescripciÃ³n">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="mission_view_list">
            <field name="name">space.mission.list</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <tree string="Mission List">
                    <field name="description"/>
                    <field name="space_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="tripulation_ids"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="mission_view_search">
            <field name="name">space.mission.list</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <search>
                    <field name="description"/>
                    <field name="space_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="tripulation_ids"/>
                </search>
            </field>
        </record>
    </data>
</odoo>


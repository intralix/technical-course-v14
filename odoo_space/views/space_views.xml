<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="space_view_form">
            <field name="name">space.space.form</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <form string="Space Form">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="shiptype"/>
                                <field name="fueltype"/>
                                <field name="width"/>
                                <field name="height"/>
                            </group>
                            <group>
                                <field name="passengers"/>
                                <field name="fuel"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción">
                                <field name="description"/>
                            </page>
                            <page string="Seguridad">
                                <field name="securitydesc"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="space_view_list">
            <field name="name">space.space.list</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <tree string="Ship List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="width"/>
                    <field name="height"/>
                    <field name="fueltype"/>
                    <field name="shiptype"/>
                    <field name="passengers"/>
                    <field name="fuel"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="space_view_search">
            <field name="name">space.space.list</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="width"/>
                    <field name="height"/>
                    <field name="fueltype"/>
                    <field name="shiptype"/>
                    <field name="passengers"/>
                    <field name="fuel"/>
                </search>
            </field>
        </record>

        <record id="space_space_view_graph" model="ir.ui.view">
            <field name="name">space.space.view.graph</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <graph string="Gráfica de combustible" type="bar">
                    <field name="name"></field>
                    <field name="fuel" type="measure"></field>
                </graph>
            </field>
        </record>


    </data>
</odoo>


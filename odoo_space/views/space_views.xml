<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="space_view_form">
            <field name="name">space.space.form</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <form string="Space Form">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="active"/>

                            </group>
                            <group>
                                <field name="shiptype"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="space_view_list">
            <field name="name">space.space.list</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <tree string="Ship List">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="width"/>
                    <field name="height"/>
                    <field name="fueltype"/>
                    <field name="shiptype"/>
                    <field name="passengers"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="space_view_search">
            <field name="name">space.space.list</field>
            <field name="model">space.space</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="width"/>
                    <field name="height"/>
                    <field name="fueltype"/>
                    <field name="shiptype"/>
                    <field name="passengers"/>
                </search>
            </field>
        </record>
    </data>
</odoo>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="space_website">
            <t t-call="website.layout">
                <t t-set="title">Naves Espaciales</t>
                <div class="oe_structure">
                    <div class="container">
                        <h1>Naves disponibles</h1>
                        <t t-foreach="ships" t-as="ship">
                            <h3>
                                <t t-esc="ship.id"/>
                                <t t-esc="ship.name"/>
                            </h3>
                            <p> Tipo de nave:
                                <span t-field="ship.shiptype"/>
                            </p>
                            <p> Descripción:
                                <span t-field="ship.description"/>
                            </p>
                            <p> Tipo de combustible:
                                <span t-field="ship.fueltype"/>
                            </p>
                            <strong>Misiones</strong>
                            <t t-foreach="ship.mission_ids" t-as="mission">
                                <p>
                                    <a t-att-href="/space/{{ slug(mission)}}">
                                        <t t-esc="mission.name"/>
                                    </a>
                                </p>
                                <p>Fecha de lanzamiento:
                                    <i t-field="mission.start_date" t-field-options='{"format":"long"}'/>
                                </p>
                            </t>
                            <t t-if="not ship.mission_ids">
                                <p> Sin misiones </p>
                            </t>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        <template id="mission_website">
            <t t-call="website.layout">
                <t t-set="title">Misión</t>
                <div class="oe_structure">
                    <div class="container">
                        <h3 t-field="mission.name"/>
                        <p>Última modificación:
                            <i t-field="mission.write_date" t-field-options='{"format":"long"}'/>
                        </p>
                        <p>Misión:
                            <t t-esc="mission.space_id.name"/>
                        </p>
                        <h3>Tripulantes:</h3>
                        <ul>
                            <t t-foreach="mission.tripulation_ids" t-as="crewmember">
                                <li>
                                    <span t-field="crewmember.name"/>
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
